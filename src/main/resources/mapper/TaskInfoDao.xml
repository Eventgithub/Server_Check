<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cxyz.check.dao.TaskInfoDao">
    <resultMap id="TaskInfo" type="TaskInfo"  >
        <id property="id" column="_id" />
        <result property="name" column="_name" />
        <result property="type" column="type" />
        <result property="start" column="start_time" />
        <result property="end" column="end_time" />
        <association property="grade" javaType="Grade" >
            <id column="grade_id" property="id"/>
        </association>
        <association property="checker" javaType="User" >
            <id column="checker_id" property="id"/>
            <result column="c_type" property="type" />
        </association>
        <association property="sponsor" javaType="User"  >
            <id column="sponsor_id" property="id"/>
            <result column="s_type" property="type" />
        </association>
        <association property="room" javaType="ClassRoom" >
            <id column="room_id" property="id"/>
        </association>
    </resultMap>
    <resultMap id="TaskWithComp" type="TaskInfo">
        <id property="id" column="_id" />
        <result property="name" column="_name" />
        <result property="type" column="type" />
        <association property="grade" javaType="Grade" >
            <id column="grade_id" property="id"/>
        </association>
        <association property="checker" javaType="User" >
            <id column="checker_id" property="id"/>
            <result column="c_type" property="type" />
        </association>
        <association property="sponsor" javaType="User"  >
            <id column="sponsor_id" property="id"/>
            <result column="s_type" property="type" />
        </association>
        <association property="room" javaType="ClassRoom" >
            <id column="room_id" property="id"/>
        </association>
        <collection property="completions" ofType="com.cxyz.check.entity.TaskCompletion">
            <id property="id" column="c_id" />
            <result property="state" column="state" />
            <result property="date" column="_date" />
            <result property="updatetime" column="update_time" />
        </collection>
    </resultMap>
    <select id="getTaskInfos" parameterType="int" resultType="TaskInfo">
        select
        _id,_name,sponsor_id 'sponsor.id',
        checker_id 'checker.id',
        grade_id 'grade.id',type,
        s_type 'sponsor.type',c_type 'checker.type',
        room_id 'room.id',
        start_time 'start',
        end_time 'end'
        from tb_taskinfo
        where grade_id=#{grade};
    </select>

    <select id="getTasks" parameterType="int" resultMap="TaskWithComp">
        select
        t._id,
        t._name,
        t.sponsor_id,
        t.checker_id,
        t.grade_id,
        t.type,
        t.s_type,
        t.c_type,
        t.room_id,
        t.start_time,
        t.end_time,
        c._id 'c_id',
        c._date,
        c.update_time,
        c.state
        from tb_taskinfo t left join tb_completion c on t._id=c.taskinfo_id
        where grade_id=#{grade};
    </select>
</mapper>